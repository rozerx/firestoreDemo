<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisYapActivity">

    <EditText
        android:id="@+id/editText_kullanicininTelefonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/editText_kullanicininSifresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/editText_kullanicininTelefonu"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editText_kullanicininTelefonu"
        app:layout_constraintTop_toBottomOf="@+id/editText_kullanicininTelefonu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Kayıtlı Kullanıcı Girişi"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_kullaniciGirisYap"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:text="Giriş Yap"
        app:layout_constraintEnd_toEndOf="@+id/editText_kullanicininSifresi"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/editText_kullanicininSifresi"
        app:layout_constraintTop_toBottomOf="@+id/editText_kullanicininSifresi" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıtlı kullanıcının telefonu:"
        app:layout_constraintBottom_toTopOf="@+id/editText_kullanicininTelefonu"
        app:layout_constraintEnd_toEndOf="@+id/editText_kullanicininTelefonu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_kullanicininTelefonu" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifresi:"
        app:layout_constraintBottom_toTopOf="@+id/editText_kullanicininSifresi"
        app:layout_constraintEnd_toEndOf="@+id/editText_kullanicininSifresi"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="@+id/editText_kullanicininSifresi" />
</androidx.constraintlayout.widget.ConstraintLayout>